# Simply eBay - Environment Variables
# Copy to .env.local and add your actual values

# ===========================================
# EMAIL SERVICE (EmailJS) - REQUIRED
# ===========================================
# Get these from https://www.emailjs.com/
# 1. Create account, 2. Create email service, 3. Create templates
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_emailjs_service_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_emailjs_public_key
NEXT_PUBLIC_EMAILJS_PASSWORD_RESET_TEMPLATE_ID=template_password_reset
NEXT_PUBLIC_EMAILJS_WELCOME_TEMPLATE_ID=template_welcome

# ===========================================
# SMS SERVICE (Twilio) - OPTIONAL
# ===========================================
# Enable SMS notifications (set to 'true' when ready)
NEXT_PUBLIC_SMS_ENABLED=false

# Get these from https://console.twilio.com/
NEXT_PUBLIC_TWILIO_SID=your_twilio_account_sid
NEXT_PUBLIC_TWILIO_TOKEN=your_twilio_auth_token
NEXT_PUBLIC_TWILIO_PHONE=+1234567890

# ===========================================
# EBAY API - FOR FUTURE LISTING INTEGRATION
# ===========================================
NEXT_PUBLIC_EBAY_APP_ID=your_ebay_app_id
NEXT_PUBLIC_EBAY_CERT_ID=your_ebay_cert_id
NEXT_PUBLIC_EBAY_DEV_ID=your_ebay_dev_id

# ===========================================
# LLAMAFILE AI SERVICES
# ===========================================
NEXT_PUBLIC_LLAVA_BASE_URL=http://localhost:8080
NEXT_PUBLIC_EMBEDDINGS_BASE_URL=http://localhost:8765

# ===========================================
# GUN.JS P2P RELAY
# ===========================================
NEXT_PUBLIC_GUN_RELAY_URL=http://localhost:8765/gun
